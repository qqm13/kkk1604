<Window x:Class="kkk1604.View.EditEvent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kkk1604.View"
        mc:Ignorable="d"
        Title="EditEvent" Height="470" Width="880">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="1">
            <Label Content="Редактирование события" Margin="0 10 0 0" FontSize="15" HorizontalAlignment="Center"/>
        </StackPanel>


        <StackPanel Grid.Row="1" Grid.RowSpan="2">
            <Label Content="Выберите дату" FontSize="15"/>
            <DatePicker/>
            <Label Content="Выберите адрес"  FontSize="15"/>
            <Label Content="Адрес"  FontSize="15"/>
            <ComboBox/>
            <Label Content="Сектор"  FontSize="15"/>
            <ComboBox/>
            <Label Content="Участок"  FontSize="15"/>
            <ComboBox/>
            <Label Content="Введите количество гостей"  FontSize="15"/>
            <TextBox/>
            <Label Content="Выберите шаблон" HorizontalAlignment="Center" Margin="0 10 0 0"  FontSize="15"/>
            <ComboBox/>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="2" Grid.RowSpan="2">
            <Label Content="Или настройте врунчую тип"  FontSize="15"/>
            <Label Content="Тип гроба"  FontSize="15"/>
            <ComboBox/>
            <Label Content="Тип памятника"  FontSize="15"/>
            <ComboBox/>
            <Label Content="Тип цветов"  FontSize="15"/>
            <ComboBox/>
            <Label Content="Выберите" FontSize="15" Margin="20 6 0 0"/>
            <CheckBox Content="Некролог" Margin="18 7 0 0" FontSize="16"/>
            <CheckBox Content="Последний ужин" Margin="18 7 0 0" FontSize="16"/>
            <CheckBox Content="Памятное видео" Margin="18 7 0 0" FontSize="16"/>
            <CheckBox Content="Автобус для гостей" Margin="18 7 0 0" FontSize="16"/>
            <CheckBox Content="Катафалк" Margin="18 7 0 0" FontSize="16"/>
            <CheckBox Content="Священик" Margin="18 7 0 0" FontSize="16"/>

        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="1" Grid.RowSpan="2" VerticalAlignment="Center">
            <Label Content="Цена" HorizontalAlignment="Center"/>
            <TextBox Width="170" Height="30"/>
            <Button Content="Сохранить" Height="50" FontSize="15" Width="150" Margin="0 10 0 0"/>
        </StackPanel>

    </Grid>
</Window>
