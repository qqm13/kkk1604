<Window x:Class="kkk1604.View.Repertoire"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kkk1604.View"
        mc:Ignorable="d"
        Title="Repertoire" Height="640" Width="370">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="1">
            <Label Content="Репертуар" HorizontalAlignment="Center" FontSize="17" Margin="0 10 0 0"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="1" Grid.RowSpan="2">
            <Button Content="Гроб" FontSize="16" Height="50" Margin="0 25 0 0"/>
            <Button Content="Надгробие" FontSize="16" Height="50" Margin="0 25 0 0"/>
            <Button Content="Цветы" FontSize="16" Height="50" Margin="0 25 0 0"/>
            <Button Content="Место" FontSize="16" Height="50" Margin="0 25 0 0"/>
            <Button Content="Материал" FontSize="16" Height="50" Margin="0 25 0 0"/>
            <Button Height="50" Margin="0 25 0 0">
                <TextBlock Text="Размеры гробов" FontSize="16" TextWrapping="Wrap" MaxWidth="100" TextAlignment="Center"/>
            </Button>
            <Button Height="50" Margin="0 25 0 0">
                <TextBlock Text="Формы памятников" FontSize="16" TextWrapping="Wrap" MaxWidth="100" TextAlignment="Center"/>
            </Button>


        </StackPanel>
        
    </Grid>
</Window>
